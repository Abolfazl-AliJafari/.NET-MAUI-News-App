<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="NewsApp.Resources.SplashScreen">
    <ContentPage.Background>
        <!-- پس‌زمینه گرادینت -->
        <LinearGradientBrush EndPoint="0,1">
            <GradientStop Color="#6A0572" Offset="0.0" /> <!-- بنفش تیره -->
            <GradientStop Color="#FF8C42" Offset="0.5" /> <!-- نارنجی ملایم -->
            <GradientStop Color="#002147" Offset="1.0" /> <!-- سرمه‌ای تیره -->
        </LinearGradientBrush>
    </ContentPage.Background>

    <StackLayout VerticalOptions="Center" HorizontalOptions="Center" Padding="10" Spacing="40">
        <!-- تصویر -->
        <Image Source="NewsApp_Logo.png" HeightRequest="200" Margin="0,-50,0,0" />
        
        <!-- متن -->
        <Label Text="Developed by Abolfazl Alijafari" 
               FontSize="24" 
               FontFamily="RobotoBold" 
               HorizontalOptions="Center" 
               Margin="0,50,0,0" /> <!-- متن کمی پایین‌تر -->
    </StackLayout>

</ContentPage>